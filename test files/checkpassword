private boolean checkpassword(String username,String upassword)
	{   boolean match=false;
		
		 String url = "jdbc:postgresql://localhost/cs425_project";
		 String user = "postgres";
		   String password = "88378821";
		
		Connection conn = null;
    try
    {
	 conn = DriverManager.getConnection(url, user, password);
        System.out.println("Connection to database established.");
    }
    catch (SQLException e)
    {
        System.err.println("SQL exception: " + e.getMessage());
        System.err.println("SQL state: " + e.getSQLState());
        System.err.println("Error code: " + e.getErrorCode());
    }

    if (conn != null)
    {
        try
        {


 PreparedStatement stmt;                
 stmt = conn.prepareStatement( "select upassword from (select username,upassword\r\n" + 
 		"from staff union (select username,upassword from customer)) as b\r\n" + 
 		"where b.username=?");      
 stmt.setString(1,username);
 ResultSet rs=stmt.executeQuery();
 String newpassword=rs.getString(1);
 
 
 if(upassword==newpassword) { match=true;}

 
 
 
 
 



	

System.out.println("Database connection closed.");
        }
        catch (SQLException e)
        {
            System.err.println("SQL exception: " + e.getMessage());
            System.err.println("SQL state: " + e.getSQLState());
            System.err.println("Error code: " + e.getErrorCode());
        }


    }	return match;}
